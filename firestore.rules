rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return (request.auth.uid != null)
    }

    function isCreatedByUserRead() {
      return isSignedIn() && resource.data.createdBy == request.auth.uid;
    }

    function isReader() {
      return isSignedIn() && request.auth.uid in resource.data.readers || isCreatedByUserRead();
    }

    function isCreatedByUserWrite() {
      return isSignedIn() && request.resource.data.createdBy == request.auth.uid;
    }

    match /recipes/{recipe} {
      allow delete: if isCreatedByUserRead();
      allow update: if isCreatedByUserRead();
      allow create: if isCreatedByUserWrite();
      allow read: if isReader();
    }

    match /users/{userId} {
      allow read, write: if isSignedIn();
    }



  }
}

